{
  "moduleNameMapper": {
    "@app-lcs2/(.*)": "<rootDir>/src/$1",
    "@test-lcs2/(.*)": "<rootDir>/test/$1"
  },
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testPathIgnorePatterns": [
    "<rootDir>/.git/",
    "<rootDir>/.github/",
    "<rootDir>/.husky/",
    "<rootDir>/coverage/",
    "<rootDir>/node_modules/"
  ],
  "transform": {
    "^.+.tsx?$": ["ts-jest", {}]
  }
}
